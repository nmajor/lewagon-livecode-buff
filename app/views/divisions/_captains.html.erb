<div class="row">
  <% groups.each do |group| %>
    <div class="col-sm-6">
      <div class="captain">
        <h3><%= group.name %></h3>
        <div><%= image_tag group.captain.avatar_url, class: "avatar-large" %></div>
        <div><%= group.captain.name %></div>
      </div>
    </div>
  <% end %>
</div>

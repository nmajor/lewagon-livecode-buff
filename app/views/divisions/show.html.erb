<div class="container">
  <div class="row">
    <% @division.groups.each do |group| %>
      <div class="col-md-3">
        <h3><%= group.name %></h3>
        <ul class="division-group-card list-group">
          <% group.students.each do |student| %>
            <li class="list-group-item student-card">
              <%= image_tag student.avatar_url, class: "avatar" %>
              <div class="name"><%= student.name %></div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

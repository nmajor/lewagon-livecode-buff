<div class="row">
  <div class="col-xs-6">
    <h3><%= link_to "+", award_group_path(group), class: "btn btn-success btn-xs", method: :post, remote: :true %> <%= link_to group.name, group_path(group) %></h3>
    <div>
      <% group.students.each do |student| %>
        <%= image_tag student.avatar_url, class: "avatar" %>
      <% end %>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="score"><%= group.score %></div>
    <div class="badges">
      <% group.merits.each do |merit| %>
        <div class="merit-modal-click" data-modal="#merit-modal-<%= merit.id %>">
        <%= cl_image_tag merit.image, :width=>100, :height=>100, :crop=>"fill", class: "merit-image merit-image-#{ merit.id}" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
